<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/shape_board_tool_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/ib_paint"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@null"
        android:onClick="btnOnclick"
        android:src="@drawable/select_paint"/>
    <ImageButton
        android:id="@+id/ib_line"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@null"
        android:onClick="btnOnclick"
        android:src="@drawable/select_line"/>
    <ImageButton
        android:id="@+id/ib_rect"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@null"
        android:onClick="btnOnclick"
        android:src="@drawable/select_rect"/>
    <ImageButton
        android:id="@+id/ib_arrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:onClick="btnOnclick"
        android:background="@null"
        android:src="@drawable/select_arrow"/>


</LinearLayout>